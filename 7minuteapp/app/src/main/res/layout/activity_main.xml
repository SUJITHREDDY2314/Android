<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".MainActivity">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:orientation="vertical"
                  android:padding="@dimen/main_layout_main_image_padding"

                  android:id="@+id/linearLayout" app:layout_constraintTop_toTopOf="parent">
        <ImageView android:layout_width="match_parent"

                   android:layout_height="@dimen/main_layout_main_image_height"
                   android:contentDescription="main image"
                   android:src="@drawable/img_main_page"
        />
        <LinearLayout android:layout_width="@dimen/start_button_size"
                      android:id="@+id/llstart"
                      android:layout_height="@dimen/start_button_size"
                      android:layout_marginTop="@dimen/start_button_margin_top"
                      android:gravity="center"
                      android:background="@drawable/item_circular_color_accent_ripple"
                      android:clickable="true"
                      android:onClick="sujith"
        >
            <TextView android:layout_width="wrap_content"
                      android:id="@+id/startText"
                      android:layout_height="wrap_content"
                      android:text="START"
                      android:textColor="@color/colorPrimary1"
                      android:textSize="22sp"
            />


        </LinearLayout>


    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:gravity="center"
                  app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent"

                  android:orientation="horizontal"
    >

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_gravity="center"
                      android:layout_weight="1"
                      android:id="@+id/bmiButton"

        >

            <TextView android:layout_width="70dp" android:layout_height="70dp"
                      android:text="Bmi"
                      android:gravity="center"
                      android:textColor="@color/white"
                      android:textSize="25sp"
                      android:layout_gravity="center"
                      android:background="@drawable/item_circular_color_accent_background2"
            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Calculator"
                      android:gravity="center"
                      android:layout_gravity="center"
                      android:textColor="@color/colorAccent1"
                      android:textSize="25sp"
            />
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_gravity="center"
                      android:layout_weight="1"
                      android:id="@+id/historyButton"

        >

            <ImageView
                      android:layout_width="70dp" android:layout_height="70dp"
                      android:text="Bmi"
                      android:gravity="center"
                      android:textColor="@color/white"
                      android:src="@drawable/history"
                      android:textSize="25sp"

                      android:layout_gravity="center"
                      android:background="@drawable/item_circular_color_accent_background2"
            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="History"
                      android:gravity="center"
                      android:layout_gravity="center"
                      android:textColor="@color/colorAccent1"
                      android:textSize="25sp"
            />
        </LinearLayout>



    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>