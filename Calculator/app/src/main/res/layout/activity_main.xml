<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            tools:context=".MainActivity">

    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            tools:context=".MainActivity">

            <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvInput"
                    android:textSize="48sp"
                    android:maxLength="12"
                    android:layout_weight="1"
                    android:background="#efefef"

            />
    </LinearLayout>
    <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"

            tools:context=".MainActivity">
            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"

                    android:layout_weight="1"
                    android:orientation="horizontal"

                    >
                    <Button
                            android:text="7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" android:id="@+id/buttonSeven"
                            android:layout_weight="1"
                            android:onClick="onDigit"
                    />
                    <Button
                            android:text="8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" android:id="@+id/buttonEight"
                            android:layout_weight="1"
                            android:onClick="onDigit"
                    />
                    <Button
                            android:text="9"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" android:id="@+id/buttonNine"
                            android:layout_weight="1"
                            android:onClick="onDigit"
                    />
                    <Button
                            android:text="/"
                            android:layout_width="0dp"
                            android:layout_height="match_parent" android:id="@+id/buttonDivide"
                            android:layout_weight="1"
                            android:onClick="onOperator"
                    />
            </LinearLayout>
            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"

                    android:layout_weight="1"
                    android:orientation="horizontal"

            >
                <Button
                        android:text="4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" android:id="@+id/buttonFour"
                        android:layout_weight="1"
                        android:onClick="onDigit"
                />
                <Button
                        android:text="5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" android:id="@+id/buttonFive"
                        android:layout_weight="1"
                        android:onClick="onDigit"
                />
                <Button
                        android:text="6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" android:id="@+id/buttonSix"
                        android:layout_weight="1"
                        android:onClick="onDigit"
                />
                <Button
                        android:text="*"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" android:id="@+id/buttonMultiply"
                        android:layout_weight="1"
                        android:onClick="onOperator"
                />
            </LinearLayout>
            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"

                    android:layout_weight="1"
                    android:orientation="horizontal"

            >
                <Button
                        android:text="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" android:id="@+id/buttonOne"
                        android:layout_weight="1"
                        android:onClick="onDigit"
                />
                <Button
                        android:text="2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" android:id="@+id/buttonTwo"
                        android:layout_weight="1"
                        android:onClick="onDigit"
                />
                <Button
                        android:text="3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" android:id="@+id/buttonThree"
                        android:layout_weight="1"
                        android:onClick="onDigit"
                />
                <Button
                        android:text="-"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" android:id="@+id/buttonSubract"
                        android:layout_weight="1"
                        android:onClick="onOperator"
                />
            </LinearLayout>
            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"

                    android:layout_weight="1"
                    android:orientation="horizontal"

            >
                <Button
                        android:text="."
                        android:layout_width="0dp"
                        android:layout_height="match_parent" android:id="@+id/buttonDecimal"
                        android:layout_weight="1"
                        android:onClick="onDecimal"
                />
                <Button
                        android:text="0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" android:id="@+id/buttonZero"
                        android:layout_weight="1"
                        android:onClick="onDigit"
                />
                <Button
                        android:text="CLR"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" android:id="@+id/buttonClear"
                        android:layout_weight="1"
                        android:onClick="onClear"
                />
                <Button
                        android:text="+"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" android:id="@+id/buttonAdd"
                        android:layout_weight="1"
                        android:onClick="onOperator"
                />
            </LinearLayout>
            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"

                    android:layout_weight="1"
                    android:orientation="horizontal"

            >
                <Button
                        android:text="@string/back"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:id="@+id/buttonLastRemove"
                        android:layout_weight="1"
                        android:onClick="onRemoveLast"/>
                <Button
                        android:text="="
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" android:id="@+id/buttonEqual"
                        android:layout_weight="1"
                        android:onClick="onEqual"/>
            </LinearLayout>

    </LinearLayout>

    </LinearLayout>
</layout>